            <DataGrid Name="elegirAula" HorizontalAlignment="Left" Height="193" Margin="10,10,0,0" VerticalAlignment="Top" Width="340"  Visibility="Collapsed" IsReadOnly="True" SelectionChanged="ElegirAula_SelectionChanged"/>
        </Grid>

    </Grid>


</Window>
