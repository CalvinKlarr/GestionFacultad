        <Button Name="modificar" Content="Modificar" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Width="273" Margin="22,114,0,0" Height="43" Click="Modificar_Click"/>
        <Button Name="eliminar" Content="Eliminar" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Width="273" Margin="22,183,0,0" Height="43" Click="Eliminar_Click"/>
        <Button Name="asignar" Content="Asignar" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Width="273" Margin="22,250,0,0" Height="43" Click="Asignar_Click"/>
        <Button x:Name="ver" Content="Ver" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Width="273" Margin="22,316,0,0" Height="43" Click="Ver_Click"/>

    </Grid>
</Window>
